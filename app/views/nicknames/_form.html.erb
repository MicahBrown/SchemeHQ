<div class="nickname-form" style="display: none;">
  <%= form_for [@user, nickname] do |f| %>
    <div class="input-group">
      <%= f.text_field :value,
        class: 'input-group-field',
        data:  {
          guard_required:         true,
          guard_length:           [User::DISPLAY_NAME_LIMIT.min, User::DISPLAY_NAME_LIMIT.max].inspect,
          guard_errors_container: "#nickname_errors"
        }
      %>
      <div class="input-group-button">
        <%= f.submit class: 'button' %>
      </div>
    </div>
    <div id="nickname_errors" class="text-left"></div>
  <% end %>
</div>