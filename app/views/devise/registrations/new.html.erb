<div class="row">
  <div class="columns">
    <div class="form">
      <div class="form-header"><h1>Sign Up</h1></div>

      <div class="form-container">
        <%= form_for(resource, as: resource_name,
                              url: registration_path(resource_name),
                             html: { data: { guard_validate: '' } }) do |f| %>
          <%= form_errors(resource) %>

          <div class="form-field">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, data: { guard_required: '' } %>
          </div>

          <div class="form-field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <span class="form-tip"><%= @minimum_password_length %> characters min.</span>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", data: { guard_required: '' } %>
          </div>

          <div class="form-field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", data: { guard_required: '', guard_equalto: '#user_password', guard_equalto_message: 'Value must match password.' } %>
          </div>

          <div class="form-field">
            <%= f.submit "Sign up", class: "button" %>
          </div>
        <% end %>
        <hr/>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


