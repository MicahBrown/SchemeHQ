<div class="row">
  <div class="columns">
    <h1><%= @discussion.title %></h1>
  </div>
</div>

<%= link_to "Add Poll", "javascript:void(0);", data: { open: 'poll_reveal' } %>
<%= reveal 'poll_reveal' do %>
  <%= render 'polls/form' %>
<% end %>
<%= render 'comments/create_form' %>

<div class="row">
  <div class="columns">
    <ul class="entries"><%= render discussion_entries(@discussion) %></ul>
  </div>
</div>